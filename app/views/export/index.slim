#export_section
  .row.header-section.text-center
    .col-md-4
      h2 WaniKani to Anki Exporter
    .col-md-4.col-md-offset-4.text-right
      img src="images/wanikanitoanki_logo_sm.png" class="center-block img-responsive"

  #user_info.row
    .col-md-12.text-center
      img src="http://www.gravatar.com/avatar/#{wanikani_user["gravatar"]}?s=100" class="img-circle"
      p.text-center
        strong.username Hi, #{wanikani_user["username"]}!
        br
        small.logout_link= link_to("(Not #{wanikani_user["username"]}?)", '/logout', method: :delete)

  #export_section_items
    .row
      .col-md-12.text-center
        p.lead Choose which type of Anki deck you want to generate from your WaniKani account

    - if flash[:error]
      .row
        .col-md-2
        .col-md-8.alert.alert-danger.text-center= flash[:error]
        .col-md-2

    .row
      - %w(kanji vocabulary radicals).each do |type|
        .col-md-4.export-section== partial "export/full_lists_form", locals: { type: type }

    .row
      .col-md-12.top-buffer.hidden-xs

    .row
      .col-md-4.col-md-offset-1.export-section= partial "export/critical_items"
      .col-md-4.col-md-offset-2.export-section= partial "export/burned_items"
